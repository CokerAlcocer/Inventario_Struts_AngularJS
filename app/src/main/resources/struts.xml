<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.action.extension" value="," />
    <constant name="struts.devMode" value="true" />

    <package name="navigation" extends="struts-default">

        <!--NAVEGACION PRODUCTOS-->
        <action name="index">
            <result>/index.jsp</result>
        </action>

        <!--NAVEGACION MARCAS Y CATEGORÃAS-->
        <action name="cb" class="mx.utez.edu.app.extras.CategoryBrandAction" method="findAllBoth">
            <result name="success">/view/brands.jsp</result>
        </action>

        <!--NAVEGACION MARCAS-->
        <action name="addBrand" class="mx.utez.edu.app.extras.CategoryBrandAction" method="saveBrand">
            <result name="success">/view/brands.jsp</result>
            <result name="fail">/view/brands.jsp</result>
        </action>

        <!--NAVEGACION CATEGORIAS-->
        <action name="addCategory" class="mx.utez.edu.app.extras.CategoryBrandAction" method="saveCategory">
            <result name="success">/view/brands.jsp</result>
            <result name="fail">/view/brands.jsp</result>
        </action>

        <action name="removeCategory" class="mx.utez.edu.app.extras.CategoryBrandAction" method="removeCategory">
            <result name="success">/view/brands.jsp</result>
            <result name="fail">/view/brands.jsp</result>
        </action>

        <action name="updateCategory" class="mx.utez.edu.app.extras.CategoryBrandAction" method="updateCategory">
            <result name="success">/view/brands.jsp</result>
            <result name="fail">/view/brands.jsp</result>
        </action>
    </package>

    <package name="api" namespace="/api" extends="json-default">
        <interceptors>
            <interceptor-stack name="myStack">
                <interceptor-ref name="json" />
            </interceptor-stack>
        </interceptors>

        <action name="findCategoryById" class="mx.utez.edu.app.extras.CategoryBrandAction" method="findAllCategories">
            <result name="success" type="json" />
        </action>
    </package>
</struts>
